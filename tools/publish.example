USER=""
HOST="apt.zulip.net"
PATH="/var/www/apt/user"

set -e

if [ "$1" == "-f" ]; then
    rsync -avz --delete . $USER@$HOST:$PATH
else
    echo "SIMULATED SYNC"
    echo
    rsync --dry-run -avz --delete . $USER@$HOST:$PATH
    echo "This was a dry run. Pass -f to actually perform."
fi
